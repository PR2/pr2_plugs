 <launch>

  <!-- Plug to checkerboard -->
  <param name="vision_plug_detection/output" type="string" command="$(find pr2_plugs_actions)/scripts/load_plugin_calibration.py $(find pr2_plugs_actions)/config/plug_description.yaml" />

  <!-- The plug finding action -->
  <node pkg="pr2_plugs_actions" type="vision_detect_plug" name="vision_plug_detection" output="screen">
    <param name="subpixel_corners" type="bool" value="true"/>
  </node>

</launch>
